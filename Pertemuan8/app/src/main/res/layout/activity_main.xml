<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Ket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Dua Angka"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/Txt_Angka1"
        android:layout_width="344dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:hint="Nilai Pertama" />

    <EditText
        android:id="@+id/Txt_Angka2"
        android:layout_width="349dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:hint="Nilai Kedua" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/Btn_Hasil"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="getHasil"
            android:text="+"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Btn2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/Btn_Hasil"
            android:onClick="getKurang"
            android:text="-"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Btn3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_toStartOf="@+id/Btn4"
            android:layout_toLeftOf="@+id/Btn4"
            android:onClick="getKali"
            android:text="X"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Btn4"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:onClick="getBagi"
            android:text="/"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/Btn_Bersih"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="getBersih"
        android:text="BERSIHKAN"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Lbl6"
        android:layout_width="309dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="HASIL"
        android:textColor="#000000"
        android:textSize="24sp" />


</LinearLayout>